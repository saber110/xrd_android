<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_style"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingTop="100dp"
    android:divider="@drawable/divider"
    android:dividerPadding="3dp"
    android:showDividers="middle"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/xiaoqu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入小区名字"
            android:textColor="#000000"
            android:textSize="@dimen/main_text_size"  />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/xiaoqu"
            android:src="@drawable/home" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/search_garden_key"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/search_style"
            />

        <ImageView
            android:id="@+id/search_garden_button"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="34dp"
            android:src="@drawable/search" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/garden_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="若无当前小区"
        android:textSize="@dimen/text_size"
        android:textColor="#000000"/>

        <TextView
            android:id="@+id/add_garden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建"
            android:textSize="@dimen/text_size"
            android:layout_marginLeft="20dp"
            android:textColor="#1E71E5"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            />

    </LinearLayout>


</LinearLayout>


